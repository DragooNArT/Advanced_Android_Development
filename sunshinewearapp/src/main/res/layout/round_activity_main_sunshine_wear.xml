<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sunshinewearapp.MainSunshineWearActivity"
    tools:deviceIds="wear_round"
    android:background="@color/activity_background">

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock"
        android:textSize="40dp"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true" />
    <View
        android:layout_width="60dp"
        android:layout_height="2dp"
        android:background="#3eb9ee"
        android:id="@+id/view"
        android:layout_above="@+id/weather_conditions"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView"
        android:textSize="25dp"
        android:layout_above="@+id/view"
        android:layout_alignEnd="@+id/textClock" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weather_conditions"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/textView" />

</RelativeLayout>
